@model Patient
<div class="demo-section k-content wide">
    <div id="chart-@ViewBag.Type"></div>
</div>
<script>
    function createChart() {
            var baseUrl = "@Url.Content("~/dashboard/patients/" + @Model.Id + "/weightpatient")";
            $("#chart-@ViewBag.Type").kendoChart({
                dataSource: {
                    transport: {
                        read: {
                            url: baseUrl,
                            dataType: "json",
                            type: "get",
                            data: {
                                beginDate: "16-07-2018",
                                period: "1w"
                            }
                        }
                    },
                    sort: {
                        field: "day",
                        dir: "asc"
                    }
                },
                title: {
                    text: "@ViewBag.Title"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "line"
                },
                series: [{
                    field: "value",
                    categoryField: "day",
                    name: ""
                }],
                categoryAxis: {
                    labels: {
                        rotation: -90
                    },
                    crosshair: {
                        visible: true
                    }
                },
                valueAxis: {
                    labels: {
                        format: "N0"
                    },
                    majorUnit: 220,
                    plotBands: [
                        {
                            from: 0,
                            to: 60, //TODO Schiaffato, trovare il modo di prenderlo
                            color: "#00FFFF",
                            opacity: 0.3
                        }],
                },
                tooltip: {
                    visible: true,
                    shared: true,
                    format: "N0"
                }
            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
</script>