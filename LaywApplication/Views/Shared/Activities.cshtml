@model Patient
@using System;
@using System.Collections.Generic;
@using LaywApplication.Controllers.Utils;
@using LaywApplication.Models;

<div class="demo-section k-content">
    <div id="tabstrip-activities">
        <ul>
            @{
                List<Activity> activities = await APIUtils.GetModelListAsync<Activity>("https://localhost:44333/dashboard/patients/" + Model.Id + "/activities", "activities");
                    
                <li class="k-state-active">0.@activities[0].ActivityName</li>
                for (int i = 1; i < activities.Count; i++)
                {
                    <li>@i.@activities[i].ActivityName</li>
                }
            }
        </ul>

        @{
            for (int i = 0; i < activities.Count; i++)
            {
                <div>
                    @{await Html.RenderPartialAsync("PatientActivity", Tuple.Create("activity" + i, "activities", activities[i], Model));}
                </div>
            }
        }
    </div>
</div>

<script>
    $(document).ready(createTabStrip("activities"));
</script>