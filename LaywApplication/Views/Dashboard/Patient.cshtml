@model Doctor
@{
    ViewBag.PageHeader = "Patient: " + ((Patient)ViewBag.CurrentPatient).Name;
    var divId = "main";
}

<div class="container">
    <div class="demo-section k-content">
        <div id="tabstrip-@divId">
            <ul>
                <li class="k-state-active">
                    Diet
                </li>
                <li>
                    Statistics
                </li>
                <li>
                    Training
                </li>
            </ul>
            <div>
                @{await Html.RenderPartialAsync("PatientDiet"); }
            </div>
            <div>
                @{await Html.RenderPartialAsync("PatientStatistics"); }
            </div>
            <div>
                @{await Html.RenderPartialAsync("PatientTraining"); }
            </div>
        </div>
    </div>
</div>

<style>
	@@media (min-width: 1200px) {
		.container {
			width: 1090px;
		}
	}
</style>

<script>
    $(document).ready(createTabStrip("@divId"));
</script>


