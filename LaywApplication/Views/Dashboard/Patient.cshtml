@model Doctor
@{
    ViewBag.PageHeader = "Patient: " + ((Patient)ViewBag.CurrentPatient).Name;
}

<div id="example">
    <div class="demo-section k-content">
        <div id="tabstrip">
            <ul>
                <li class="k-state-active">
                    Diet
                </li>
                <li>
                    Statistics
                </li>
                <li>
                    Training
                </li>
            </ul>
            <div>
                @{await Html.RenderPartialAsync("PatientDiet"); }
            </div>
            <div>
                @{await Html.RenderPartialAsync("PatientStatistics"); }
            </div>
            <div>
                @{await Html.RenderPartialAsync("PatientTraining"); }
            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $("#tabstrip").kendoTabStrip({
                animation: {
                    open: {
                        effects: "fadeIn"
                    }
                }
            });
        });
</script>


