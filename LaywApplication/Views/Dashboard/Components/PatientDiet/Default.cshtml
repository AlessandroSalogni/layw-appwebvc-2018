@model int

<div class="demo-section k-content">
	<div id="tabstrip-diet">
		<ul>
			@foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)).OfType<DayOfWeek>().OrderBy(day => day < DayOfWeek.Monday))
			{
				<li id="tab-item-diet-@day.ToString()">@day.ToString()</li>
			}
		</ul>
		@foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)).OfType<DayOfWeek>().OrderBy(day => day < DayOfWeek.Monday))
		{
			<div>
				@{await Html.RenderPartialAsync("Components/PatientDiet/DayDiet", day, 
					  new ViewDataDictionary(this.ViewData) { { "patientId", Model } }); }
			</div>
		}
	</div>
</div>

<style>
	#tabstrip-diet .k-grid {
		margin-top: 40px;
		color: rgba(8,26,40,1);
	}
	.k-window > .k-window-titlebar,
	#tabstrip-diet .k-grid thead > tr {
		background-color: #605ca8;
	}
	#tabstrip-diet .k-grid thead .k-header {
		text-align: center;
		color: white;
		font-weight: 700;
		background-color: transparent;
	}
	#tabstrip-diet .k-grid tbody > .k-alt {
		background-color: rgba(238,242,250,0.9);
	}
	#tabstrip-diet .k-grid tbody > tr > td:first-child {
		font-weight: 700;
	}
	#tabstrip-diet .k-grid tbody > tr .k-button {
		border-radius: 15px;
	}
</style>

<script>
	$(document).ready(function() {
		createTabStrip("diet");
		$("#tab-item-diet-Monday").trigger("click");
	});

	$("#tab-item-diet").click(function () {
		$("#tab-item-diet-Monday").trigger("click")
	})
</script>